{
  "name": "auto-scheduler-api",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "clean": "rimraf --glob ./dist/*",
    "tsc": "tsc",
    "build": "npm-run-all clean tsc",
    "start": "node ./dist/server.js",
    "deploy": "npm-run-all build start",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write ./src/"
  },
  "defaultExtension": "ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "ITBA PF Grupo 2",
  "license": "ISC",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "warn",
      "no-console": "off",
      "no-unused-vars": "off",
      "prefer-const": "warn"
    }
  },
  "dependencies": {
    "@types/nodemailer": "^6.4.9",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "luxon": "^3.4.0",
    "mongoose": "^7.1.1",
    "mongoose-lean-virtuals": "^0.9.1",
    "neo4j-driver": "^5.8.0",
    "nodemailer": "^6.9.5",
    "nodemailer-express-handlebars": "^6.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/luxon": "^3.3.1",
    "@types/node": "^20.1.7",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.4"
  }
}
