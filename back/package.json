{
  "name": "auto-scheduler-api",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./dist/*",
    "tsc": "tsc",
    "build": "npm-run-all clean tsc",
    "start": "node ./dist/server.js",
    "deploy": "npm-run-all build start",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write ./src/"
  },
  "defaultExtension": "ts",
  "engines": {
    "node": ">=12.0.0"
  },
  "author": "ITBA PF Grupo 2",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "4.17.3",
    "@types/node": "13.13.52",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.7.1"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "no-console": "off",
      "no-unused-vars": "warn",
      "prefer-const": "warn"
    }
  }
}
